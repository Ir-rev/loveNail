<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/clientListFragment">

    <fragment
        android:label="Хост"
        android:id="@+id/hostFragment"
        android:name="ru.pervov.lovenail.HostFragment">
    </fragment>

    <fragment
        android:label="Мок"
        android:id="@+id/createMockFragment"
        android:name="ru.pervov.lovenail.mock_screen.fragment.CreateMockFragment">
    </fragment>

    <fragment
        android:label="Клиенты"
        android:id="@+id/clientListFragment"
        android:name="ru.pervov.lovenail.client_list_screen.fragment.ClientListFragment">
    </fragment>

    <fragment
        android:label="Создание клиентов"
        android:id="@+id/clientCreateFragment"
        android:name="ru.pervov.lovenail.client_create_screen.fragment.ClientCreateFragment">
    </fragment>

    <fragment
        android:label="Процедуры"
        android:id="@+id/procedureListFragment"
        android:name="ru.pervov.lovenail.procedure_list_screen.fragment.ProcedureListFragment">
    </fragment>

    <fragment
        android:label="Календарь День"
        android:id="@+id/dayCalendarFragment"
        android:name="ru.pervov.lovenail.day_calendar_screen.fragment.DayCalendarFragment">
    </fragment>

    <fragment
        android:label="Создание процедуры"
        android:id="@+id/procedureCreateFragment"
        android:name="ru.pervov.lovenail.procedure_create_screen.fragment.ProcedureCreateFragment">
    </fragment>

    <fragment
        android:label="Календарь Неделя"
        android:id="@+id/weekCalendarFragment"
        android:name="ru.pervov.lovenail.week_calendar_screen.fragment.WeekCalendarFragment">
    </fragment>

    <action
        android:id="@+id/action_global_clientListFragment"
        app:destination="@id/clientListFragment"/>

    <action
        android:id="@+id/action_global_clientCreateFragment"
        app:destination="@id/clientCreateFragment" />

    <action
        android:id="@+id/action_global_weekCalendarFragment"
        app:destination="@id/weekCalendarFragment" />

    <action
        android:id="@+id/action_global_procedureListFragment"
        app:destination="@id/procedureListFragment" />
    <action
        android:id="@+id/action_global_createMockFragment"
        app:destination="@id/createMockFragment" />
    <action
        android:id="@+id/action_global_procedureCreateFragment"
        app:destination="@id/procedureCreateFragment" />
    <action
        android:id="@+id/action_global_dayCalendarFragment"
        app:destination="@id/dayCalendarFragment"
/>


</navigation>